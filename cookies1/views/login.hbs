<div class="container my-5">
  <h4>LOGIN</h4>
  <hr/>
  <form class="form" action="/login" method="post" role="form" autocomplete="off">
    <div class="mb-3">
      <input id="nombre" name='nombre' placeholder="nombre" class="form-control" type="text" required>
    </div>
    <div class="mb-3">
      <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
    </div>
    <div class="mb-3">
      <input class="btn btn-primary my-3" type="submit" value="Login">
    </div>
  </form>
  <div class="mb-3">
    <button class="btn btn-primary" onclick="location.href = '/register'">Ir a Register</button>
  </div>
</div>